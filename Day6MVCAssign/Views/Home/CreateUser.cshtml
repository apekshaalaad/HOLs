@{
    ViewBag.Title = "CreateUser";
}

<h2>CreateUser</h2>
@model Day6MVCAssign.Models.User

@{
    AjaxOptions opt = new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "result"
    };
}

<h2>Current Users</h2>
<div id="result">
    @Html.Action("GetAllUsers")
</div>
@using (Ajax.BeginForm("CreateUser", opt))
{
    <p>
        User Name: @Html.TextBoxFor(u => u.UserName)
    </p>

    <p>
        Password: @Html.PasswordFor(u => u.Password)
    </p>
    <input type="submit" value="Create User" />
}